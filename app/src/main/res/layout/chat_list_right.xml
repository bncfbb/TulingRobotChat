<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left|center"
        android:layout_margin="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FBC02D"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/chat_list_touxian_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="66.6cm"
                    android:textColor="#fff"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/chat_list_nick_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left|center"
            android:layout_marginTop="4dp"
            android:gravity="right">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F44336"
                app:cardElevation="0dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/chat_list_message_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Hello WorldHello WorldHello WorldHello WorldHello WorldHello World!"
                    android:padding="10dp" />

            </android.support.v7.widget.CardView>

            <cn.c4code.robotchat.widget.TriangleView
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                app:color="#F44336"
                app:direction="right"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chat_list_head_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_overlay="false" />


        </LinearLayout>

    </LinearLayout>





</LinearLayout>